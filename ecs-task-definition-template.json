{
    "family": "%ECS_TASK_DEFINITION%",
    "containerDefinitions": [
        {
            "name": "%CONTAINER_NAME%",
            "image": "%IMAGE%",
            "cpu": 0,
            "memoryReservation": 200,
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80,
                    "protocol": "tcp",
                    "appProtocol": "http"
                }
            ],
            "essential": true,
            "environment": [
                {
                    "name": "DB_NAME",
                    "value": "%DB_NAME%"
                },
                {
                    "name": "PORT",
                    "value": "80"
                },
                {
                    "name": "DB_HOST",
                    "value": "%DB_HOST%"
                },
                {
                    "name": "DB_PORT",
                    "value": "%DB_PORT%"
                },
                {
                    "name": "DB_USER",
                    "value": "%DB_USER%"
                },
                {
                    "name": "DB_PASSWORD",
                    "value": "%DB_PASSWORD%"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-create-group": "true",
                    "awslogs-group": "/ecs/%ECS_TASK_DEFINITION%",
                    "awslogs-region": "%REGION%",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ],
    "taskRoleArn": "arn:aws:iam::031525572722:role/ecsTaskExecutionRole",
    "executionRoleArn": "arn:aws:iam::031525572722:role/ecsTaskExecutionRole",
    "requiresCompatibilities": [
        "EC2"
    ],
    "cpu": "512",
    "memory": "800",
    "runtimePlatform": {
        "cpuArchitecture": "X86_64",
        "operatingSystemFamily": "LINUX"
    }
}
